# TODO - rename to index.html when the Blog page should be enabled

---
# blog page must be named index.html and in its own folder to support pagination
# https://jekyllrb.com/docs/pagination/
layout: page
title: Blog
---
<section class="list">
	{% if site.posts.size == 0 %}
		<p class="text-center">Most probably I'm writing my first blog post. Check back later! :wink:</p>
	{% elsif site.paginate %}
		{% for post in paginator.posts %}
	        {% include blog-post.html %}
	    {% endfor %}

		{% if site.paginate %}
			{% include pagination.html%}
		{% endif %}
	{% else %}
		{% for post in site.posts %}
			{% include blog-post.html %}
		{% endfor %}
	{% endif %}
</section>
